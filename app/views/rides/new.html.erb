<h2 class="my-3 p-3 bg-primary text-white">Request a Ride</h2>

<div class="row">
  <div class="col-sm-6">

    <form action="/rides" method="post">
      <p>
        Your Name:
        <input required type="text" name="passenger_name" class="form-control">
      </p>
      <p>
        Pickup Location:
        <input required type="text" name="origin" class="form-control">
      </p>
      <p>
        Where to?
        <input required type="text" name="destination" class="form-control">
      </p>

      <button class="btn btn-primary">Submit Request</button>

    </form>

  </div>
</div>
